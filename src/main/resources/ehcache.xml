<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.ehcache.org/v3"
	xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
	xsi:schemaLocation="
            http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd
            http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">

	<!-- specify cache persistence directory --> <!-- alternatively use ${user.home} -->
	<persistence
		directory="${java.io.tmpdir}/ehcache/oapen-dashboard" />


	<cache alias="lookupCacheDaily">
		<key-type>java.lang.String</key-type>
		<value-type>java.lang.Object</value-type>
		<expiry>
			<ttl unit="days">1</ttl>
		</expiry>
		<resources>
			<heap unit="entries">100</heap>
			<offheap unit="MB">1</offheap>
		</resources>
	</cache>

	<cache alias="lookupCache">
		<key-type>java.lang.String</key-type>
		<value-type>java.lang.Object</value-type>
		<expiry>
			<ttl unit="days">30</ttl>
		</expiry>
		<resources>
			<heap unit="entries">2000</heap>
			<offheap unit="MB">10</offheap>
		</resources>
	</cache>

	<cache alias="eventCountPerRegionCache">
		<key-type>org.oapen.dashboard.api.repository.EventCountPerRegionArguments</key-type>
		<value-type>java.util.List</value-type>
		<expiry>
			<ttl unit="days">30</ttl>
		</expiry>
		<resources>
			<disk unit="MB" persistent="true">100</disk>
		</resources>
	</cache>

	<cache alias="eventCountPerCountryCache">
		<key-type>org.oapen.dashboard.api.repository.EventMonthlyCountsPerCountryArguments
		</key-type>
		<value-type>java.util.List</value-type>
		<expiry>
			<ttl unit="days">30</ttl>
		</expiry>
		<!-- <listeners> <listener> <class>org.oapen.dashboard.repository.CacheEventLogger</class> 
			<event-firing-mode>ASYNCHRONOUS</event-firing-mode> <event-ordering-mode>UNORDERED</event-ordering-mode> 
			<events-to-fire-on>CREATED</events-to-fire-on> <events-to-fire-on>EXPIRED</events-to-fire-on> 
			</listener> </listeners> -->
		<resources>
			<disk unit="MB" persistent="true">100</disk>
		</resources>
	</cache>

	<cache alias="eventCountPerItemCache">
		<key-type>org.oapen.dashboard.api.repository.EventMonthlyCountsPerItemArguments
		</key-type>
		<value-type>java.util.List</value-type>
		<expiry>
			<ttl unit="days">30</ttl>
		</expiry>
		<resources>
			<disk unit="MB" persistent="true">100</disk>
		</resources>
	</cache>

</config>
